<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.github.phuctranba.core.fragment.CreateStepsFragment">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_ingredients"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/addIngredient"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_item"/>
    </LinearLayout>


    <ListView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/border_add_combobox"
        android:id="@+id/listview_ingredients"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/add_step"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/addStep"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_item"/>
    </LinearLayout>

    <ListView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/border_add_combobox"
        android:id="@+id/listview_step"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"/>


</LinearLayout>
